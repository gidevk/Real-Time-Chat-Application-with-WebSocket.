<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="DEBUG">
    <Properties>
        <Property name="log-path">D:/logs path</Property>
    </Properties>

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout>
                <pattern>%d{yyyy-MM-dd HH:mm:ss} [%t] %-5p C:%C{1}  M:%M L:%L %X{apiName}- %m%n</pattern>
            </PatternLayout>        </Console>

        <File name="CaLogs" fileName="${log-path}/CaLogs.log">
            <PatternLayout>
                <pattern>%d{yyyy-MM-dd HH:mm:ss} [%t] %-5p C:%C{1}  M:%M L:%L %X{apiName}- %m%n</pattern>
            </PatternLayout>        </File>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout>
                <pattern>%d{yyyy-MM-dd HH:mm:ss} [%t] %-5p C:%C{1}  M:%M L:%L %X{apiName}- %m%n</pattern>
            </PatternLayout>
        </Console>

    </Appenders>

    <Loggers>
        <Logger name="CaLogs" level="debug" additivity="false">
            <AppenderRef ref="CaFileAppender"/>
            <AppenderRef ref="CaLogs"/>
            <AppenderRef ref="Console"/>
        </Logger>

        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>